<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.AvatarActivity">

    <ImageView
        android:id="@+id/imgAvatar1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/description_imgAvatar"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imgAvatar4"
        app:layout_constraintEnd_toStartOf="@+id/imgAvatar2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgAvatar2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/description_imgAvatar"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imgAvatar5"
        app:layout_constraintEnd_toStartOf="@+id/imgAvatar3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgAvatar1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgAvatar3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/description_imgAvatar"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/imgAvatar6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgAvatar2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgAvatar4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/description_imgAvatar"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgAvatar5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar1" />

    <ImageView
        android:id="@+id/imgAvatar5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/description_imgAvatar"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgAvatar6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgAvatar4"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar2" />

    <ImageView
        android:id="@+id/imgAvatar6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/description_imgAvatar"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgAvatar5"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatar3" />

    <TextView
        android:id="@+id/lblAvatar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/Avatar_lblMargin"
        android:layout_marginBottom="@dimen/Avatar_lblMargin"
        android:background="@color/color_lblAvatar"
        android:padding="@dimen/padding_lblAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar1"
        app:layout_constraintEnd_toEndOf="@+id/imgAvatar1" />

    <TextView
        android:id="@+id/lblAvatar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/Avatar_lblMargin"
        android:layout_marginBottom="@dimen/Avatar_lblMargin"
        android:background="@color/color_lblAvatar"
        android:padding="@dimen/padding_lblAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar2"
        app:layout_constraintEnd_toEndOf="@+id/imgAvatar2" />

    <TextView
        android:id="@+id/lblAvatar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/Avatar_lblMargin"
        android:layout_marginBottom="@dimen/Avatar_lblMargin"
        android:background="@color/color_lblAvatar"
        android:padding="@dimen/padding_lblAvatar"
        app:layout_constraintBottom_toTopOf="@+id/imgAvatar6"
        app:layout_constraintEnd_toEndOf="@+id/imgAvatar3" />

    <TextView
        android:id="@+id/lblAvatar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/Avatar_lblMargin"
        android:layout_marginBottom="@dimen/Avatar_lblMargin"
        android:background="@color/color_lblAvatar"
        android:padding="@dimen/padding_lblAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar4"
        app:layout_constraintEnd_toEndOf="@+id/imgAvatar4" />

    <TextView
        android:id="@+id/lblAvatar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/Avatar_lblMargin"
        android:layout_marginBottom="@dimen/Avatar_lblMargin"
        android:background="@color/color_lblAvatar"
        android:padding="@dimen/padding_lblAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar5"
        app:layout_constraintEnd_toEndOf="@+id/imgAvatar5" />

    <TextView
        android:id="@+id/lblAvatar6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/Avatar_lblMargin"
        android:layout_marginBottom="@dimen/Avatar_lblMargin"
        android:background="@color/color_lblAvatar"
        android:padding="@dimen/padding_lblAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/imgAvatar6"
        app:layout_constraintEnd_toEndOf="@+id/imgAvatar6" />

</androidx.constraintlayout.widget.ConstraintLayout>